<UserControl x:Class="KojangTalk.ChatListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KojangTalk"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <!--채팅 목록들을 담는 사용자 정의 컨트롤 -->
    
    
    <!-- 싱글턴 인스턴스를 데이터 컨텍스트로 지정하엿다. -->
    <Grid DataContext="{x:Static local:ChatListDesignModel.Instance}" Background="{StaticResource ForegroundLightBrush}">
     
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            
            <!-- 데이터 컨텍스트중에 Items에 바인딩 -->
            
            
            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:ChatListItemControl />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
    </Grid>
</UserControl>
